{
  "name": "seo-auditor",
  "version": "1.0.0",
  "description": "General-purpose Node.js SEO crawler and audit tool",
  "main": "src/crawler.ts",
  "scripts": {
    "crawl": "tsx src/crawler.ts",
    "report": "tsx src/report.ts",
    "test": "node --require tsx/cjs --test tests/**/*.test.ts",
    "typecheck": "tsc --noEmit",
    "lint": "eslint .",
    "format": "prettier --write ."
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "better-sqlite3"
    ]
  },
  "dependencies": {
    "axios": "^1.13.5",
    "better-sqlite3": "^12.6.2",
    "cheerio": "^1.2.0",
    "dotenv": "^17.3.1",
    "fast-csv": "^5.0.5",
    "robots-parser": "^3.0.1",
    "sitemapper": "^4.1.4"
  },
  "devDependencies": {
    "@eslint/js": "^10.0.1",
    "@types/better-sqlite3": "^7.6.13",
    "@types/node": "^25.3.0",
    "eslint": "^10.0.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-jsdoc": "^62.7.1",
    "globals": "^17.3.0",
    "prettier": "^3.8.1",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.56.1"
  }
}
